{
  "name": "panels-ui",
  "version": "0.1.0",
  "description": "Panels UI components",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production browserify index.js --standalone PanelsUi --no-bundle-external -o ./dist/panels-ui.js && uglifyjs ./dist/panels-ui.js -cm > ./dist/panels-ui.min.js",
    "livereload": "livereloadify ./playground",
    "start": "npm run watch & npm run livereload & npm run static",
    "static": "static ./playground --port 3000 --cache 0",
    "test": "TODO",
    "watch": "watchify -o ./playground/playground-compiled.js -v -d playground/playground.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UXtemple/panels-ui.git"
  },
  "keywords": [
    "panels",
    "ui",
    "components",
    "UXtemple"
  ],
  "author": "UXtemple Limited <hi@uxtemple.com>",
  "contributors": [
    "Dar√≠o Javier Cravero <dario@uxtemple.com>",
    "Tom Parandyk <tom@uxtemple.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UXtemple/panels-ui/issues"
  },
  "homepage": "https://github.com/UXtemple/panels-ui",
  "eslintConfig": {
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "defaultParams": true,
      "forOf": true,
      "jsx": true,
      "templateStrings": true
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "eqeqeq": 2,
      "curly": 2,
      "new-cap": false,
      "quotes": [
        2,
        "single"
      ],
      "strict": 0
    }
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "experimental": true
        }
      ],
      "envify"
    ]
  },
  "devDependencies": {
    "babelify": "^5.0.4",
    "browserify": "^9.0.3",
    "envify": "^3.3.0",
    "livereloadify": "^2.0.0",
    "node-static": "^0.7.6",
    "uglify-js": "^2.4.16",
    "watchify": "^2.4.0"
  },
  "dependencies": {
    "immutable": "^3.7.0",
    "react": "^0.13.1"
  }
}
